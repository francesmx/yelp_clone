<h1>Restaurants</h1>
<% if @restaurants.any? %>
  <% @restaurants.each do |restaurant| %>
    <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
    <p><%= restaurant.description %></p>
    <% if restaurant.reviews.any? %>
      <% restaurant.reviews.each do |review| %>
      <p><%= review.rating %> out of 5: "<%= review.thoughts %>"</p>
      <% end %>
    <% end %>
    <p><%= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant) %> |
    <%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %> |
    <%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete %></p>
  <% end %>
<% else %>
  <h2>No restaurants yet</h2>
<% end %>

<h2><a href="restaurants/new">Add a restaurant</a></h2>
