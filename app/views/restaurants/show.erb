<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.description %></p>
<% if @reviews.any? %>
<h3>Reviews</h3>
<h4>Average rating: <%= @restaurant.average_rating.to_i %></h4>
  <% @reviews.each do |r| %>
  <div class="review">
    <h4><%= r.rating %> out of 5 - "<%= r.comments %>"</h4>
    <p><%= r.created_at.strftime("%d %B %Y %H:%M") %></p>
  </div>
  <% end %>
<% end %>
<%= link_to 'Edit', edit_restaurant_url(@restaurant.id) %>
<%= link_to 'Delete', restaurant_url(@restaurant), method: :delete %>
<% if current_user && !current_user.has_reviewed?(@restaurant) %>
  <%= link_to 'Review', new_restaurant_review_path(@restaurant.id) %>
<% end %>
